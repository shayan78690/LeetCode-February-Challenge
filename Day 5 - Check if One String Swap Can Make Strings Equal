import java.util.Arrays;

class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
        if (s1.equals(s2)) {
            return true; // If both strings are already equal, return true
        }
        
        int first = -1, second = -1; // Indices where strings differ
        char[] c1 = s1.toCharArray();
        char[] c2 = s2.toCharArray();

        for (int i = 0; i < c1.length; i++) {
            if (c1[i] != c2[i]) {
                if (first == -1) {
                    first = i;  // First mismatch index
                } else if (second == -1) {
                    second = i; // Second mismatch index
                } else {
                    return false; // More than 2 mismatches → cannot swap
                }
            }
        }

        if (second == -1) {
            return false; // Only one mismatch → cannot swap to fix
        }

        // Swap and check
        char temp = c1[first];
        c1[first] = c1[second];
        c1[second] = temp;

        return Arrays.equals(c1, c2);
    }
}
